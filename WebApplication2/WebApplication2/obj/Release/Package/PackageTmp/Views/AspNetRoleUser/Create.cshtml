@using WebApplication2.Models;
@{
    ViewBag.Title = "Create";
    var Role = ViewBag.Role as AspNetRole;
    var Users = ViewBag.Users as SelectList;
    var db = new SEP24Team3Entities();
    var user = db.AspNetUsers.ToList();

}

<h2>Create</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add User to @Role.Name</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("User", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId", Users, new { @class = "form-control chosen" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index","AspNetRoles")">Back to List</a>
</div>

@section scripts{
    <script>
        $(function () {
            $(".chosen").chosen();
        });
    </script>

}

