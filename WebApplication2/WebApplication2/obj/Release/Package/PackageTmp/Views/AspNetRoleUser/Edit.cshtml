@using WebApplication2.Models;
@{
    ViewBag.Title = "Edit";
    var Role = ViewBag.Role as SelectList;
    var user = ViewBag.User as AspNetUser;
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">      
        <hr />
        <h4>Update Role for @user.UserName</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("Role", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("roleId", Role, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index","AspNetRoles")">Back to List</a>
</div>